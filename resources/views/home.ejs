<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg lg:text-xl"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl lg:text-12xl font-bold">Don't wait !</h1>
            <a class="hero-btn px-3 py-1 md:px-6 md:py-3 text-xs md:text-base rounded-full text-white font-bold mt-4 btn-primary" href="#menu">Order Now</a>
        </div>
        <div class="w-1/2">
            <img src="https://res.cloudinary.com/dpwtq5rgs/image/upload/v1708767681/food%20images/pizza4_d0bnti.png" alt="main-img">
        </div>
    </div>
</section>

<section id="menu" class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 grid1">
        <% pizzas.forEach(function(pizza) { %>

        <div class="w-full md:w-64 card-box">
            <img class="mb-4 mx-auto" src="<%= pizza.image %>" alt="pizza img" />
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">&#8377;<%= pizza.price %></span>
                    <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
   
</section>

